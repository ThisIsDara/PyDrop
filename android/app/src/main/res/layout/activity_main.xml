<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1a1a1a"
    android:padding="16dp">

    <!-- Header bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="4dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PYDROP"
            android:textColor="#f59e0b"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:letterSpacing="0.15"/>

        <!-- Status pill -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#242424"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/tvStatusDot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â—"
                android:textSize="10sp"
                android:textColor="#ef4444"
                android:layout_marginEnd="6dp"/>

            <TextView
                android:id="@+id/tvStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NOT READY"
                android:textColor="#ef4444"
                android:textSize="11sp"
                android:textStyle="bold"
                android:fontFamily="monospace"/>

        </LinearLayout>
    </LinearLayout>

    <!-- Device info row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/tvHostname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="device"
            android:textColor="#e5e5e5"
            android:textSize="13sp"
            android:fontFamily="monospace"/>

        <TextView
            android:id="@+id/tvIp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0.0.0:8080"
            android:textColor="#737373"
            android:textSize="12sp"
            android:fontFamily="monospace"/>

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#383838"
        android:layout_marginBottom="12dp"/>

    <!-- Section label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEARBY DEVICES"
        android:textColor="#737373"
        android:textSize="10sp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:letterSpacing="0.15"
        android:layout_marginBottom="8dp"/>

    <!-- Device list (takes remaining space) -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDevices"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"/>

        <TextView
            android:id="@+id/tvNoDevices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="scanning for devices..."
            android:textColor="#404040"
            android:textSize="13sp"
            android:fontFamily="monospace"/>

    </FrameLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#383838"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"/>

    <!-- Action buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSend"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="SEND FILE"
            android:textColor="#1a1a1a"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:backgroundTint="#f59e0b"
            android:layout_marginEnd="8dp"
            android:textAllCaps="true"/>

        <Button
            android:id="@+id/btnExit"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="EXIT"
            android:textColor="#e5e5e5"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:backgroundTint="#2e2e2e"
            android:textAllCaps="true"/>

    </LinearLayout>

</LinearLayout>
